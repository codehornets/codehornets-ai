{
  "description": "Orchestrator hooks: send tasks to workers via triggers",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node /workspace/tools/monitoring/activation_wrapper.js session_start",
            "timeout": 10
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node /workspace/tools/monitoring/activation_wrapper.js user_prompt_submit",
            "timeout": 5
          }
        ]
      }
    ],
    "ToolExecutionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node /workspace/tools/monitoring/activation_wrapper.js tool_start",
            "timeout": 5
          }
        ]
      }
    ],
    "ToolExecutionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node /workspace/tools/monitoring/activation_wrapper.js tool_end",
            "timeout": 5
          }
        ]
      }
    ],
    "AssistantResponse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node /workspace/tools/monitoring/activation_wrapper.js assistant_response",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node /workspace/tools/tasks/create_worker_task.js anga 'Stop Event Task' 'Task triggered by stop event'",
            "timeout": 30
          }
        ]
      }
    ]
  }
}

